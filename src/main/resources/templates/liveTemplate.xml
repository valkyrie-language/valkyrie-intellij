<templateSet name="Valkyrie" description="Create a type">
	<template name="abstractclass" value="abstract class $name$ {&#10;    $END$&#10;}" description="Create a type"
	          toReformat="true" toShortenFQNames="true">
		<variable name="name" expression="" defaultValue="" alwaysStopAt="true"/>
	</template>
	<template name="class" value="class $name$ {&#10;    $END$&#10;}" description="Create a type" toReformat="true"
	          toShortenFQNames="true">
		<variable name="name" expression="" defaultValue="" alwaysStopAt="true"/>
	</template>
	<template name="for-in" value="for i in $list$ {&#10;    $END$&#10;}" description="Traverse linear iterator"
	          toReformat="false" toShortenFQNames="true">
		<variable name="list" expression="" defaultValue="" alwaysStopAt="true"/>
		<context>
			<option name="valkyrie" value="true"/>
		</context>
	</template>
	<template name="for-kv" value="for key, value in $dict$ {&#10;    $END$&#10;}"
	          description="Traverse dictionary iterator" toReformat="false" toShortenFQNames="true">
		<variable name="dict" expression="" defaultValue="" alwaysStopAt="true"/>
		<context>
			<option name="valkyrie" value="true"/>
		</context>
	</template>
</templateSet>

